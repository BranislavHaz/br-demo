@font-face {
  font-style: normal;
  font-weight: 400;
  src:
    url('{{ "ABCMonumentGrotesk-Regular.woff2" | asset_url }}') format('woff2'),
    url('{{ "ABCMonumentGrotesk-Regular.woff" | asset_url }}') format('woff'),
    url('{{ "ABCMonumentGrotesk-Regular.otf" | asset_url }}') format('opentype');
  font-family: 'Monument_400';
  font-display: swap;
}

